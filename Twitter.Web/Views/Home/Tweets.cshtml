@using WebGrease.Css.Extensions

@model IEnumerable<Twitter.Models.Tweet>

@{
    ViewBag.Title = "Tweets home";
}

<h2> My tweets</h2>

<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.AuthorId)*@
            Title
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Description)*@
            Description
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.TakenDate)*@
            Date
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => item.Title)
            </td>
            <td>
                @Html.DisplayFor(model => item.Description)
            </td>
            <td>
                @Html.DisplayFor(model => item.TakenDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id , @class = "btn btn-default"}) |
                @Html.ActionLink("Details", "Details", new { id = item.Id, @class = "btn btn-default" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id, @class = "btn btn-default" }) |
                @Html.ActionLink("Favourite", "Favourite", new { id = item.Id, @class = "btn btn-default" }) |
                @Html.ActionLink("Retweet", "Retweet", new { id = item.Id, @class = "btn btn-default" }) |
                @Html.ActionLink("Report", "Report", new { id = item.Id, @class = "btn btn-default" })|
                @Html.ActionLink("Reply", "Reply", new { id = item.Id, @class = "btn btn-default" }) |
                @Html.ActionLink("Share", "Share", new { id = item.Id, @class = "btn btn-default" })
            </td>
        </tr>
    }


</table>

